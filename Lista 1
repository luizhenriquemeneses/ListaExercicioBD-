# Listas-de-BD
/*LISTA 1 BANCO DE DADOS*/
/*1*/
Create schema BANCO;
USE BANCO;
/*2*/
Create table Banco (
Codigo int (30),
Nome text (50),
Primary key (Codigo) 
);

Create table Agencia(
Cod_banco int (30),
Numero_agencia int (30),
Endereco varchar (50),
Primary key (Numero_agencia),
Foreign key (Cod_banco) References Banco 
);

Create table Cliente
(
Cpf varchar (15),
Nome varchar (50),
Sexo char (1),
Endereco varchar (50),
Primary key (Cpf)
);

Create table Conta
(
Numero_conta int (30),
Saldo decimal (10,2),
Tipo_Conta int (5),
Num_agencia int (30),
Primary key (Numero_conta),
Foreign key (Num_agencia) References Agencia
);

Create table Historico
(
Cpf_cliente varchar (15),
Num_conta int(30),
Data_inicio date,
Primary key (Data_inicio),
Foreign key (Cpf_cliente) references Cliente,
Foreign key (Num_conta) references Conta
);

Create table Telefone_Cliente(
Telefone varchar (30),
Cpf_cli varchar (15),
Primary key (Telefone),
Foreign key (Cpf_cli) references Cliente 
);
